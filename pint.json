{
    "preset": "laravel",
    "name": "*.php",
    "exclude": [
        "bootstrap/cache",
        "resources"
    ],
    "rules": {
        "array_indentation": true,
        "array_syntax": true,
        "blank_line_before_statement": {
            "statements": [
                "break",
                "continue",
                "declare",
                "exit",
                "for",
                "foreach",
                "goto",
                "if",
                "include",
                "include_once",
                "phpdoc",
                "require",
                "require_once",
                "return",
                "switch",
                "throw",
                "try",
                "while"
            ]
        },
        "concat_space": {
            "spacing": "one"
        },
        "phpdoc_align": false,
        "phpdoc_separation": false
    }
}
